{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "compilerOptions": {
        /* 基础 */
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "ES2019",
            "DOM"
        ],
        /* Vue + TS */
        "jsx": "preserve",
        "useDefineForClassFields": true,
        "strict": false,
        "isolatedModules": true,
        /* 构建 & 类型 */
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "noEmit": true,
        /* 兼容 Vite / workspace */
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "env.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}